@model Planning_platform.Entities.Class

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактировать</h1>

<h4>Класс</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Num_of_class" class="control-label">Цифра</label>
                <input asp-for="Num_of_class" class="form-control" />
                <span asp-validation-for="Num_of_class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Letter_of_class" class="control-label">Буква</label>
                <input asp-for="Letter_of_class" class="form-control" />
                <span asp-validation-for="Letter_of_class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернутьсы к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
